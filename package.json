		"vite": "^5.2.11",
		"vite-plugin-css-injected-by-js": "^3.5.1",
		"vite-plugin-dts": "^3.9.1",
		"vite-plugin-eslint": "^1.8.1",
		"vite-plugin-static-copy": "^1.0.4",
		"vite-plugin-stylelint": "^5.3.1",
		"vite-plugin-vuetify": "^2.0.3",
		"vitest": "^1.6.0",
		"vue-tsc": "^2.0.17",
		"vuetify": "^3.6.5",
		"webfontloader": "^1.6.28"
	}
}
